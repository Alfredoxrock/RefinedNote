{
    "name": "notes-desktop-app",
    "version": "1.0.0",
    "description": "A modern desktop note-taking application built with Electron",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "dist": "electron-builder --publish=never",
        "build:msix": "electron-builder --win msix --publish=never",
        "build:appx": "electron-builder --win appx --publish=never"
    },
    "keywords": [
        "notes",
        "desktop",
        "electron",
        "productivity"
    ],
    "author": "Notes App Developer",
    "license": "MIT",
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4"
    },
    "dependencies": {},
    "build": {
        "appId": "com.notesapp.desktop",
        "productName": "Notes Desktop App",
        "directories": {
            "output": "dist_appx"
        },
        "files": [
            "src/**/*",
            "assets/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/AppLogo.png"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/AppLogo.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/AppLogo.png"
        }
    },
    "appxConfigNote": "To build Appx/MSIX you must provide a signing PFX certificate and have the Windows SDK installed. Set 'publisher' to match your certificate and configure electron-builder 'cscLink' and 'cscKeyPassword' environment variables or fields.",
    "appx": {
        "displayName": "Notes Desktop App",
        "identityName": "ComNotesAppDesktop",
        "publisher": "CN=YourPublisherName",
        "publisherDisplayName": "Your Publisher",
        "applicationId": "ComNotesAppDesktop"
    }
}